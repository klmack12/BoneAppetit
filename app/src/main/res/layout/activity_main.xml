<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AC98D1"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:fontFamily="sans-serif-condensed"
        android:text="Welcome to \n BoneAppetit!"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Please type your userName"
        android:minHeight="48dp"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="10sp"
        android:foregroundGravity="center"
        android:src="@drawable/dogbone"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:text="1224 Good Treats Court \n Brandywine, MD 20613 \n 1-800-DOG-FOOD"
        android:textSize="16sp" />

    <Button
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D34173"
        android:text="START YOUR MOBILE ORDER" />


</LinearLayout>